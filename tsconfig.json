{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019"
    ],
    "declaration": true,
    "outDir": "./lib",
    "removeComments": false,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "incremental": true,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "src"
  ]
}
